#!/bin/bash

# only split for loops on line breaks
IFS=$'\n'

function pullGit {
    for branch_line in $(git branch)
    do
        branch=${branch_line:2}
        if [[ ${branch_line:0:1} == "*" ]]
        then
            active_branch=$branch
            echo active branch = $active_branch
        fi
        git checkout $branch && git pull --rebase=preserve
    done;
    git checkout $active_branch
}

function pullHg {
    hg pull --rebase
}

function pullFolder {
    folder=$1
    cd $folder
    echo
    echo "#––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––"
    if [ -d .git ]; then
        echo "# git repository $folder"
        echo "#"
        pullGit
    elif [ -d .hg ]; then
        echo "# hg  repository $folder"
        echo "#"
        pullHg
    else
        echo "# skipping non-repository-folder $folder"
    fi
    cd - >/dev/null 2>&1
}

if [[ "X$1" == "X" ]]; then
    RepoPath=$(pwd)
else
    RepoPath=$1
fi

if [ -d $RepoPath/.git ] || [ -d $RepoPath/.hg ]; then
    pullFolder $RepoPath
else
    for folder in $(find -L $RepoPath -mindepth 1 -maxdepth 1 -type d)
    do
        pullFolder $folder
    done
    status
fi
